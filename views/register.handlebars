{{#section 'js'}}
    <script src="/components/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/scripts/register.js"></script>
{{/section}}
<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9 left-side">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">用户注册</h3>
                    </div>
                    <div class="panel-body">
                        {{#if msg}}
                            <div class="alert alert-danger">{{msg}}</div>
                        {{/if}}
                        <form novalidate="novalidate" class="row login-form" action="" method="post" id="registerForm">
                            <div class="col-md-5">
                                <div class="alert alert-danger display-hide" style="display: none;">
                                    <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    输入有误
                                </div>
                                <div class="form-group">
                                    <label for="userName">用户名</label>
                                    <input type="text" class="form-control" id="userName" name="username" placeholder="请输入用户名">
                                </div>
                                <div class="form-group">
                                    <label for="passWord">密码</label>
                                    <input type="password" class="form-control" id="passWord" name="password" placeholder="请输入密码">
                                </div>
                                <div class="form-group">
                                    <label for="mail">邮箱地址</label>
                                    <input type="email" class="form-control" id="mail" name="mail" placeholder="必填 用于找回密码">
                                </div>
                                <button type="submit" class="btn btn-primary">注册</button>
                            </div>
                            <div class="col-md-7">
                                <hr>
                                <div class="help-block text-center">
                                    <p>已经有账号了，请登录</p>
                                    <p><a href="/login">我要登录</a></p>
                                </div>
                                <hr>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-3 right-side">
                {{> mod-introduction}}
            </div>
        </div>

    </div>
</div>